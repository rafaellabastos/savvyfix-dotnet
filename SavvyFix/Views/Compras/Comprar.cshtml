@model SavvyFix.Models.Compras

<h2>Confirmar Compra</h2>

<form asp-action="Comprar" method="post">
    <div class="form-group">
        <label asp-for="IdProd" class="control-label"></label>
        <input asp-for="IdProd" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NmProd" class="control-label"></label>
        <input asp-for="NmProd" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="QntdProd" class="control-label"></label>
        <input asp-for="QntdProd" class="form-control" />
        <span asp-validation-for="QntdProd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ValorCompra" class="control-label"></label>
        <input asp-for="ValorCompra" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input type="submit" value="Confirmar Compra" class="btn btn-primary" onclick="return confirm('Tem certeza?')"/>
    </div>
</form>
