@model IEnumerable<Compras>
@{
    ViewData["Title"] = "Compras";
}

@foreach (var item in Model)
{
    <table  class="table table-bordered table-hover table-custom mx-auto pt-4 border border-secondary" style="width: 70rem">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Produto</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor</th>
            <th scope="col">Alterar</th>
            
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">@item.IdCompra</th>
            <td>@item.NmProd</td>
            <td>@item.QntdProd</td>
            <td>@item.ValorCompra</td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.IdCompra" class="btn btn-outline-warning">Editar</a>
                <a asp-action="Excluir" asp-route-id="@item.IdCompra" class="btn btn-outline-danger">Excluir</a>
            </td>
        </tr>
        </tbody>
    </table>
}
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>